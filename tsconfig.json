{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "noEmit": true,
    "moduleResolution": "Bundler",
    "declaration": false,
    "sourceMap": false,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "src",
    "outDir": "lib"
  },
  "include": ["src/**/*.ts", "test/**/*.ts"]
}
